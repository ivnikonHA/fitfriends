{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fitfriends/backend-models": ["libs/backend/models/src/index.ts"],
      "@fitfriends/balance": ["libs/backend/balance/src/index.ts"],
      "@fitfriends/config": ["libs/backend/config/src/index.ts"],
      "@fitfriends/core": ["libs/shared/core/src/index.ts"],
      "@fitfriends/data-access": ["libs/shared/data-access/src/index.ts"],
      "@fitfriends/helpers": ["libs/shared/helpers/src/index.ts"],
      "@fitfriends/review": ["libs/backend/review/src/index.ts"],
      "@fitfriends/training": ["libs/backend/training/src/index.ts"],
      "@fitfriends/user": ["libs/backend/account/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
